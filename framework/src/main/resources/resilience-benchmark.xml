<bench-config xmlns="urn:radargun:benchmark:1.1">

	<master bindAddress="${127.0.0.1:master.address}" port="${2103:master.port}" />

	<benchmark initSize="2" maxSize="4" increment="1">
		<DestroyWrapper runOnAllSlaves="true" />
		<StartCluster staggerSlaveStartup="true" delayAfterFirstSlaveStarts="5000" delayBetweenStartingSlaves="500" />
		<ClusterValidation partialReplication="false" />
		<StartBackgroundStressors numThreads="25" numEntries="1000000" entrySize="1024" puts="1" gets="2" delayBetweenRequests="100"/>
      <StartBackgroundStatistics statsIterationDuration="1000"/>
		<Sleep time="10000" />
		<Kill slaves="1" />
		<Sleep time="10000" />
		<Kill slaves="2" />
        <Sleep time="10000" />
        <Kill slaves="3" />
        <Sleep time="10000" />
		<StartCluster slaves="1" staggerSlaveStartup="false" />
		<Sleep time="10000" />
		<StartCluster slaves="2" staggerSlaveStartup="false" />
        <Sleep time="10000" />
        <StartCluster slaves="3" staggerSlaveStartup="false" />
        <Sleep time="10000" />
		<StopBackgroundStatistics />
      <StopBackgroundStressors />
	  <ReportBackgroundStats />
	</benchmark>

	<products>
		<infinispan53>
			<config name="dist-sync-vnodes.xml" cache="x" />
		</infinispan53>
	</products>

	<reports />

</bench-config>
